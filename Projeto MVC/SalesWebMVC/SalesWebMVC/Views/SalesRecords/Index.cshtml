
@{
    ViewData["Title"] = "Sales Records";
}

<h2>@ViewData["Title"]</h2>
<div class="row">
    <form class="form-row asp-action="SimpleSearch">
        <fieldset>
            <legend>Simple Search</legend>
            <div class="form-group">
                <label for="minDate" class="col-lg-6 container-lg">Min Date</label>
                <div class="col-lg-10">
                    <input type="date" name="minDate" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label for="maxDate" class="col-lg-6 container-lg">Max Date</label>
                <div class="col-lg-10">
                    <input type="date" name="maxDate" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-10">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </div>
        </fieldset>
    </form>
</div>

<div class="row">
    <form class="form-group asp-action="GroupingSearch">
        <fieldset>
            <legend>Grouping Search</legend>
            <div class="form-group">
                <label for="minDate" class="col-lg-6 container-lg">Min Date</label>
                <div class="col-lg-10">
                    <input type="date" name="minDate" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label for="maxDate" class="col-lg-6 container-lg">Max Date</label>
                <div class="col-lg-10">
                    <input type="date" name="maxDate" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-10">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </div>
        </fieldset>
    </form>
</div>

